@page
@model CRM.Pages.Perfume.Auth.RegisterModel
@{
    Layout = "_Layout2";
}
<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>@sharedResource["Create an Account"]</h3>
                <div class="theme-card">
                       <div class="text-center">
                      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                    <form class="theme-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="form-row row">
                            <div class="col-md-6">
                                <label >@sharedResource["Email"]</label>
                                <input asp-for="Input.Email" type="email" class="form-control"  placeholder="@sharedResource["Enter Email"]" required="">
                             <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label >@sharedResource["Username"]</label>
                                <input type="text" class="form-control" asp-for="Input.FullName"  placeholder="@sharedResource["Enter username"]"  required="">
                             <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                      
                            </div>
                        </div>
                        <div class="form-row row">
                            <div class="col-md-6">
                                <label>@sharedResource["Password"]</label>
                                <input asp-for="Input.Password" type="password" class="form-control" onpaste="return false" placeholder="@sharedResource["Enter password"]"  aria-describedby="passwordInput" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"  required>
                                 <span asp-validation-for="Input.Password" class="text-danger"></span>

                            </div>
                             <div class="col-md-6">
                                <label >@sharedResource["Confirm Password"]</label>
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" onpaste="return false" placeholder="@sharedResource["Confirm Password"]"  aria-describedby="passwordInput" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                                 <span asp-for="Input.ConfirmPassword" class="text-danger"></span>

                            </div>
                              <div class="mb-4">
                               <p class="mb-0 fs-12 text-muted fst-italic"> @sharedResource["By registering you agree to"]  <a href="#" class="text-primary text-decoration-underline fst-normal fw-medium">@sharedResource["Terms of Use"]</a></p>
                              </div>
                            <div class="col-md-6">
                               <button type="submit" class="btn btn-solid w-auto">@sharedResource["Sign Up"]</button>
                            </div>
                        </div>
                    </form>
                     <div class="mt-5 text-center">
                        <p class="mb-0">@sharedResource["Already have an account ?"] <a href="/perfume/auth/login" class="fw-semibold text-primary text-decoration-underline"> @sharedResource["Signin"]</a> </p>
                     </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<!--Section ends-->
