    function editButtonClick(Id) {
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/Admin/Users/Index?handler=SingleUsersForEdit",

            data: { "Id": Id },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                var rolesDropdown = document.getElementById("selectedRoles");
                    rolesDropdown.innerHTML = "";


                const defaultOption = document.createElement('option');
                defaultOption.value = '';
                defaultOption.innerText = 'Select Role';
                defaultOption.disabled = true;
                defaultOption.selected = true;
                rolesDropdown.appendChild(defaultOption);
                const roles = ['Operator', 'Store'];

                for (const role of roles) {
                    const option = document.createElement('option');
                    option.value = role;
                    option.innerText = role;
                   for(let i= 0; i<response.userRoles.length; i++){
                    console.log(response.userRoles[i]);
                        if (role === response.userRoles[i]) {
                            option.selected = true;
                        }
                  
                    }


                   

                    rolesDropdown.appendChild(option);
                }
                
                document.getElementById("UserID").value = response.userProfileVM.Id
                document.getElementById("UserNameId").value = response.userProfileVM.FullName
                document.getElementById("CurrentEmailId").value = response.userProfileVM.CurrentEmail
                document.getElementById("UserMobileId").value = response.userProfileVM.Mobile
                document.getElementById("EUsedId").checked = response.userProfileVM.IsActive
                console.log(response);
                $('#showEditModal').modal('show');
            },

            failure: function (response) {
                alert(response);
            }
        });
    }
   
        function validatePasswords() {
            var newPassword = document.getElementById('userProfileVM_NewPassword').value;
            var confirmPassword = document.getElementById('userProfileVM_ConfirmPassword').value;

            if (newPassword !== confirmPassword) {
                alert("New password and Confirm password do not match.");
                return false;
            }

            return true;
        }
    function deleteUser(Id) {
            $.ajax({
                type: "GET",
            url: "/Admin/Users/Index?handler=UsersForDelete",
            data: { "Id": Id },
                contentType: "application/json",
                dataType: "json",
