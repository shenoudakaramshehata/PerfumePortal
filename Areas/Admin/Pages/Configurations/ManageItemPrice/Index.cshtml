@page
@model CRM.Areas.Admin.Pages.Configurations.ManageItemPrice.IndexModel
@Html.AntiForgeryToken()
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    Layout = "_Layout";
    ViewBag.Title = @sharedResource["Item Price"];
    ViewBag.pTitle = @sharedResource["Item Price"];
    ViewBag.pageTitle = @sharedResource["Item Price"];
    ViewData["Title"] = @sharedResource["Item Price"];
}
<!--datatable css-->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" />
<!--datatable responsive css-->
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">

<style>
    .dataTables_filter {
        display: none;
    }
</style>



<div class="row">
    <div class="col-lg-12">
        <div class="card" id="List">
            <div class="card-header border-0">
                <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                <div class="row g-4 align-items-center">
                    <div class="col-sm-3">
                        <div class="search-box">
                            <input type="text" class="form-control search" id="txtSearch"
                                   placeholder="@sharedResource["Search for..."]">
                            <i class="ri-search-line search-icon"></i>
                        </div>
                    </div>
                    <div class="col-sm-auto ms-auto">
                        <div class="hstack gap-2">

                            <button type="button" class="btn btn-success add-btn"
                                    data-bs-toggle="modal" id="create-btn"
                                    data-bs-target="#AddModal">
                                <i class="ri-add-line align-bottom me-1"></i> @sharedResource["Add"]
                            </button>

                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div>
                    <div class="table-responsive table-card">
                        <table id="myTable" class="table  dt-responsive nowrap  align-middle" style="width:100%">
                            <thead class="table-light">
                                <tr>

                                    <th data-ordering="false">@sharedResource["Item Name"]</th>
                                    <th data-ordering="false">@sharedResource["Country"]</th>
                                    <th data-ordering="false">@sharedResource["Item Price"]</th>
                                    <th data-ordering="false">@sharedResource["Shipping Price"]</th>
                                    <th data-ordering="false">@sharedResource["Actions"]</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                </div>

            </div>

            <!--end modal-->
        </div>
    </div>
    <!--end col-->
</div>

<partial name="_AddPopup" model="@Model.itemPrice" view-data="ViewData" />
<partial name="_ViewPopup" model="@Model.itemPrice" view-data=" ViewData" />
<partial name="_EditPopup" model="@Model.itemPrice"  view-data="ViewData" />
<partial name="_DatchDelete" model="@Model.itemPrice" view-data="ViewData" />

<!--datatable js-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
@section scripts{
    <!-- list.js min js -->
       <script src="~/assets/libs/list.js/list.min.js"></script>
    <script src="~/assets/libs/list.pagination.js/list.pagination.min.js"></script>
    <!-- crm leads init -->
    <script src="~/assets/js/pages/crm-leads.init.js"></script>
}

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<!--End datatable js-->


<script>

    $(document).ready(function () {
        var domainUrl = document.getElementById("UrlId").value;
        console.log("domainUrl: " + domainUrl);
        $('#myTable').DataTable({
            "dom": 'rt<"bottom"ip><"clear">',
            ajax: { url: domainUrl + '/api/Lists/GetItemPrice' },
            columns: [

              
                { data: 'ItemTitleEn' },
                { data: 'CountryTlen' },
               
                    { data: "Price" },
                { data: "ShippingPrice" },
           
                {
                    data: "ItemPriceId",
                    render: function (data, type, row) {

                        return '<ul class="list-inline hstack gap-2 mb-0"> <li class="list-inline-item" data-bs-toggle="tooltip"data-bs-trigger="hover" data-bs-placement="top"title="View"><a href="javascript:void(0)" data-bs-toggle="modal"><i class="ri-eye-fill align-bottom text-muted" onclick="ShowViewPopUp(' + data + ')" ></i></a></li> <li class="list-inline-item" data-bs-toggle="tooltip"data-bs-trigger="hover" data-bs-placement="top"title="Edit" ><a class="edit-item-btn" href="javascript:void(0)"data-bs-toggle="modal" > <i class="ri-pencil-fill align-bottom text-muted" onclick="editButtonClick(' + data + ')"></i> </a> </li>    <li class="list-inline-item" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top"title="Delete"> <a class="remove-item-btn" data-bs-toggle="modal"href="javascript:void(0)" > <i class="ri-delete-bin-fill align-bottom text-muted" onclick="deleteItemPrice(' + data + ')"></i> </a></li></ul>';

                    },
                    className: "dt-body-center"
                },


            ],



        });
    });
    $('#txtSearch').keyup(function () {
        var table = $('#myTable').DataTable();
        //alert(table);
        table.search($(this).val()).draw();
    });

    //function validateMyForm() {


    //    if (document.getElementById("file").files.length == 0) {
    //        alert("You Must Select Image");
    //        return false;
    //    }
    //    return true;
    //}
    function editButtonClick(ItemPriceId) {
        //console.log(CategoryId);
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/Admin/Configurations/ManageItemPrice/Index?handler=SingleItemPriceForEdit",

            data: { "ItemPriceId": ItemPriceId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                document.getElementById("EditItemPriceId").value = response.ItemPriceId
                    document.getElementById("editcatId").value = response.CountryId
                    document.getElementById("editItemId").value = response.ItemId

                //document.getElementById("itempriceEditId").innerHTML = response.ItemTitleEn
                //document.getElementById("itempriceEditCountryId").innerHTML = response.CountryTlen
                document.getElementById("PriceId").value = response.Price
                document.getElementById("ShippingPriceEdit").value = response.ShippingPrice
                    //console.log(document.getElementById("ShippingPriceEdit").value = response.ShippingPrice)
                document.getElementById("BeforePriceEdit").value = response.BeforePrice
                    

                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }
    // === VIEW ===
    function ShowViewPopUp(ItemPriceId) {

        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/ManageItemPrice/Index?handler=SingleItemPriceForView",
            data: { "ItemPriceId": ItemPriceId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                    document.getElementById("ItemPriceId").innerHTML = response.ItemPriceId
                   
                document.getElementById("DPriceId").innerHTML = response.Price
                document.getElementById("ShippingPriceId").innerHTML = response.ShippingPrice

                
                $('#QuickViewPoup').modal('show');
                console.log(response);
            },
            failure: function (response) {
                alert(response);
            }
        });

    }

    // === Delete ===
    function deleteItemPrice(ItemPriceId) {


        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/ManageItemPrice/Index?handler=SingleItemPriceForDelete",
            data: { "ItemPriceId": ItemPriceId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("DeleteItemPriceId").value = response.ItemPriceId
                $('#deleteRecordModal').modal('show');


            },
            failure: function (response) {
                alert(response);
            }
        });
    }

</script>      