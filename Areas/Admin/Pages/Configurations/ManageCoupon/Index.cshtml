    function editButtonClick(CouponId) {
        console.log(CouponId);
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/Admin/Configurations/ManageCoupon/Index?handler=SingleCouponForEdit",

            data: { "CouponId": CouponId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                //console.log(response);
                document.getElementById("ECouponId").value = response.CouponId
                document.getElementById("ESerialId").value = response.Serial
                document.getElementById("EExpirationDateId").value = response.ExpirationDate
                document.getElementById("EIssueDateId").value = response.IssueDate
                document.getElementById("EAmountId").value = response.Amount
                document.getElementById("editcouId").value = response.CouponTypeId
                document.getElementById("EUsedId").checked = response.Used

                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }
    function ShowViewPopUp(CouponId) {
        console.log(CouponId);
        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/ManageCoupon/Index?handler=SingleCouponForView",
            data: { "CouponId": CouponId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                document.getElementById("CouponId").innerHTML = response.CouponId
                document.getElementById("SerialId").innerHTML = response.Serial
                document.getElementById("ExpirationDateId").innerHTML = DateFormat(response.ExpirationDate)
                document.getElementById("Issue_Date").innerHTML = DateFormat(response.IssueDate)
                document.getElementById("AmountId").innerHTML = response.Amount
                document.getElementById("CouponTypeEN").innerHTML = response.CouponTypeEN
                document.getElementById("UsedId").innerHTML = response.Used
                if (response.Used == true) {
                    document.getElementById("UsedId").innerHTML = "Used"

                }
                else {
                    document.getElementById("UsedId").innerHTML = "Not Used"

                }

                $('#QuickViewPoup').modal('show');

            },
            failure: function (response) {
                alert(response);
            }
        });

    }
    function deleteCoupon(CouponId) {
        console.log(CouponId);
        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/ManageCoupon/Index?handler=SingleCouponForDelete",
            data: { "CouponId": CouponId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("DeleteCouponId").value = response.CouponId
                $('#deleteRecordModal').modal('show');


            },
            failure: function (response) {
                alert(response);
            }
        });
    }

    function DateFormat(incomingdate) {
        var d = new Date(incomingdate),
            month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();
        if (month.length < 2)
            month = '0' + month;
        if (day.length < 2)
            day = '0' + day;
        var outcomingdate = [day, month, year].join('-');
        return outcomingdate;
    }


