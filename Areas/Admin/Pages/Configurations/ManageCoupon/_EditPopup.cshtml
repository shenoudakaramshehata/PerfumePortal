@using CRM.Data
@inject PerfumeContext _context
@{
    var CouponTypes = _context.CouponTypes.Select(e => new { e.CouponTypeId, e.CouponTypeEN });
}
@model CRM.Models.Coupon

<div class="modal fade" id="showEditModal" tabindex="-1"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="exampleModalLabel">@(sharedResource["Edit Coupon"])</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close" id="close-modal"></button>
            </div>

            <form asp-area="Admin" asp-page="/Configurations/ManageCoupon/Index" asp-page-handler="EditCoupon" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" id="id-field" />
                    <div class="row g-3">
                        <!--end col-->
                        <div class="col-lg-12 hidden">
                            <div>
                                <input id="ECouponId"  asp-for="@Model.CouponId" hidden/>

                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div>
                                <label for="@Model.Serial" class="form-label">@(sharedResource["Serial"])</label>
                                <input data-val-required="@sharedResource["Enter the Serial number"]" id="ESerialId" type="text" asp-for="@Model.Serial" class="form-control" placeholder="@sharedResource["Enter Serial"]" required />
                                <span asp-validation-for="@Model.Serial" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div>
                                <label for="@Model.ExpirationDate" class="form-label">@sharedResource["Expiration date"]</label>
                                <input data-val-required="@sharedResource["Enter the Expiration Date"]" id="EExpirationDateId" asp-for="@Model.ExpirationDate" class="form-control" placeholder="@sharedResource["Enter Expiration date"]" required />
                                <span asp-validation-for="@Model.ExpirationDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div>
                                <label for="@Model.IssueDate" class="form-label">@sharedResource["Issue date"]</label>
                                <input data-val-required="@sharedResource["Enter the Issue date"]" id="EIssueDateId" asp-for="@Model.IssueDate" class="form-control" placeholder="@sharedResource["Enter Issue date"]" required />
                                <span asp-validation-for="@Model.IssueDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div>
                                <label for="@Model.Amount" class="form-label">@sharedResource["Amount"]</label>
                                <input data-val-required="@sharedResource["Enter the Amount"]" id="EAmountId" type="number" asp-for="@Model.Amount" class="form-control" placeholder="@sharedResource["Enter Amount"]" required />
                                <span asp-validation-for="@Model.Amount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <label asp-for="@Model.CouponTypeId" for="car-rental-name">@sharedResource["Coupon Type"] <small class="text-danger">*</small></label>

                            <select data-val="true" data-val-required="@sharedResource["Select The Coupon Type"]" id="editcouId" asp-for="@Model.CouponTypeId" class="form-select required" aria-label="Default select example" required>
                                <option selected value="Select Type" disabled>@sharedResource["Choose Coupon Type"]</option>

                                @{
                                    if (CouponTypes != null)
                                    {
                                        foreach (var item in CouponTypes)
                                        {

                                            <option value="@item.CouponTypeId">@item.CouponTypeEN</option>

                                        }
                                    }
                                }

                            </select>
                            <span asp-validation-for="@Model.CouponTypeId" class="text-alert"></span>
                        </div>
                        
                        <div class="col-lg-12">
                            <div class="form-check">
                                <input id="EUsedId" asp-for="@Model.Used" class="form-check-input" type="checkbox">
                                <label for="@Model.Used" class="form-check-label">@sharedResource["Used"]</label>
                                <span asp-validation-for="@Model.Used" class="text-danger"></span>
                            </div>
                        </div>
                        <!--end col-->
                        <!--end col-->
                        <!--end col-->
                    </div>
                    <!--end row-->
                </div>
                <div class="modal-footer">
                    <div class="hstack gap-2 justify-content-end">
                        <button type="button" class="btn btn-light"
                                data-bs-dismiss="modal">
                            @sharedResource["Close"]
                        </button>
                        <button type="submit" class="btn btn-success"
                                id="add-btn">
                            @sharedResource["Save"]
                        </button>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>