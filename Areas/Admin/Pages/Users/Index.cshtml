<div class="row">
    <div class="col-lg-12">
        <div class="card" id="List">
            <div class="card-header border-0">
                <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                <div class="row g-4 align-items-center">
                    <div class="col-sm-3">
                        <div class="search-box">
                            <input type="text" class="form-control search" id="txtSearch"
                                   placeholder="@sharedResource["Search for..."]">
                            <i class="ri-search-line search-icon"></i>
                        </div>
                    </div>
                    <div class="col-sm-auto ms-auto">
                        <div class="hstack gap-2">

                            <button type="button" class="btn btn-success add-btn"
                                    data-bs-toggle="modal" id="create-btn"
                                    data-bs-target="#AddModal">
                                <i class="ri-add-line align-bottom me-1"></i> @sharedResource["Add User"]
                            </button>

                        </div>
                    </div>
                </div> 
            </div>
            <div class="card-body">
                <div>
                    <div class="table-responsive table-card">
                        <table id="myTable" class="table  dt-responsive nowrap  align-middle" style="width:100%">
                            <thead class="table-light">
                                <tr>

                                    <th  data-ordering="false">@sharedResource["FullName"]</th>
                                    <th  data-ordering="false">@sharedResource["Email"]</th>
                                    <th data-ordering="false">@sharedResource["PhoneNumber"]</th>
                                    <th class=" text-center" data-ordering="false">@sharedResource["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model.Users)
                                    {
                                        <tr>
                                            
                                            <td class="  fw-bold">@item.FullName </td>
                                            <td class="  fw-bold">@item.Email</td>
                                            <td class="  fw-bold">@item.PhoneNumber</td>
                                            <td class=" text-center fw-bold">
                                                <ul class="list-inline hstack gap-2 mb-0">
                                                   
                                                    <li class="list-inline-item" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top" title="Edit">
                                                        <a class="edit-item-btn" href="javascript:void(0)" onclick="editButtonClick('@item.Id')" data-bs-toggle="modal">
                                                            <i class="ri-pencil-fill align-bottom text-muted" ></i>
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top" title="Delete">
                                                        <a class="remove-item-btn" data-bs-toggle="modal" href="javascript:void(0)">
                                                            <i class="ri-delete-bin-fill align-bottom text-muted" onclick="deleteUser('@item.Id')"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </td>

                                        </tr>

                                    }
                                }
                            </tbody>

                        </table>
                    </div>

                </div>

            </div>

            <!--end modal-->
        </div>
    </div>
    <!--end col-->
</div>



<!--Add Model-->
<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="AddModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="exampleModalLabel">@sharedResource["Add New User"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
            </div>

            <form novalidate="true" method="post"  onsubmit="return validateMyForm();">
                <div class="modal-body">
                    <input type="hidden" id="id-field" />
                    <div class="row g-3">


                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.UserVM.FullName" class="form-label">@(sharedResource["FullName"])</label>
                                <input type="text" asp-for="@Model.UserVM.FullName" class="form-control" placeholder="@sharedResource["Enter FullName"]" required />
                                <span asp-validation-for="@Model.UserVM.FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.UserVM.Email" class="form-label">@sharedResource["Email"]</label>
                                <input type="email" asp-for="@Model.UserVM.Email" class="form-control" placeholder="@sharedResource["Enter Email"]" required />
                                <span asp-validation-for="@Model.UserVM.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.UserVM.PhoneNumber" class="form-label">@sharedResource["PhoneNumber"]</label>
                                <input type="text" data-val="true" data-val-required="@sharedResource["Please enter PhoneNumber"]" asp-for="@Model.UserVM.PhoneNumber" class="form-control" placeholder="@sharedResource["Enter PhoneNumber"]" required />
                                <span asp-validation-for="@Model.UserVM.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.UserVM.Password" class="form-label">@sharedResource["Password"]</label>
                                <input type="password" data-val="true" data-val-required="@sharedResource["Please enter Password"]" asp-for="@Model.UserVM.Password" class="form-control" placeholder="@sharedResource["Enter password"]" required />
                                <span asp-validation-for="@Model.UserVM.Password" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-lg-12">
                            <label  for="car-rental-name">@sharedResource["Role"] <small class="text-danger">*</small></label>

                            <select data-val="true" data-val-required="@sharedResource["Please choose a Role"]" id="catId" name="RoleName" class="form-select required" aria-label="Default select example" required>
                                <option selected value="">@sharedResource["Select Role"]</option>

                                @{
                                    if (Model.Roles != null)
                                    {
                                        foreach (var item in Model.Roles)

                                        {

                                            <option value="@item.Name">@item.Name</option>

                                        }
                                    }
                                }

                            </select>
@*                            <span asp-validation-for="@.Name" class="text-danger"></span>
*@
                            
                        </div>



                    </div>

                </div>
                <div class="modal-footer">
                    <div class="hstack gap-2 justify-content-end">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">@sharedResource["Close"]</button>
                        <button type="submit"  class="btn btn-success" id="add-btn">@sharedResource["Add"]</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
