@using CRM.Data
@inject PerfumeContext _context
@{
   var Categories = _context.Categories.Select(e => new { e.CategoryId, e.CategoryTlar });
}


@model CRM.Models.Item

<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="AddModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="exampleModalLabel">@sharedResource["Add New Item"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
            </div>

            <form asp-area="Admin" asp-page="/ManageItem/Index" asp-page-handler="AddItem" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                <div class="modal-body">
                    <input type="hidden" id="id-field" />
                    <div class="row g-3">
                        <div class="col-lg-12">
                            <div class="text-center col-lg-12">
                                <div class="position-relative d-inline-block">
                                    <div class="position-absolute bottom-0 end-0">
                                        <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title="Select Image">
                                            <div class="avatar-xs cursor-pointer">
                                                <div class="avatar-title bg-light border rounded-circle text-muted">
                                                    <i class="ri-image-fill"></i>
                                                </div>
                                            </div>
                                        </label>
                                        <input class="form-control d-none hidefromHere" name="file" id="file" type="file"
                                               accept="image/*" required>
                                    </div>
                                    <div class="avatar-lg p-1">
                                        <div class="avatar-title bg-light rounded-circle">
                                            <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover removeFromHere" />
                                        </div>
                                    </div>
                                </div>
                                <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.ItemTitleAr" class="form-label">@(sharedResource["TlAr"])</label>
                                <input type="text" asp-for="@Model.ItemTitleAr" class="form-control" placeholder="@sharedResource["Enter TlAr"]" required />
                                <span asp-validation-for="@Model.ItemTitleAr" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.ItemTitleEn" class="form-label">@sharedResource["TlEn"]</label>
                                <input type="text" asp-for="@Model.ItemTitleEn" class="form-control" placeholder="@sharedResource["Enter TlEn"]" required />
                                <span asp-validation-for="@Model.ItemTitleEn" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.ItemDescriptionAr" class="form-label">@sharedResource["Arabic Description"]</label>
                                <input type="text" data-val="true" data-val-required="@sharedResource["Please enter arabic description"]" asp-for="@Model.ItemDescriptionAr" class="form-control" placeholder="@sharedResource["Enter Arabic Description"]" required />
                                <span asp-validation-for="@Model.ItemDescriptionAr"  class="text-danger"></span>
                            </div>
                        </div>

                        
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.ItemDescriptionEn" class="form-label">@sharedResource["English Description"]</label>
                                <input type="text" data-val="true" data-val-required="@sharedResource["Please enter english description"]" asp-for="@Model.ItemDescriptionEn" class="form-control" placeholder="@sharedResource["Enter English Description"]" required />
                                <span asp-validation-for="@Model.ItemDescriptionEn"  class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-12">
                                <label asp-for="@Model.CategoryId" for="car-rental-name">@sharedResource["Category"] <small class="text-danger">*</small></label>

                            <select data-val="true" data-val-required="@sharedResource["Please choose a country"]" id="catId" asp-for="@Model.CategoryId" class="form-select required" aria-label="Default select example" required>
                                    <option selected value="Select Type" >@sharedResource["Select Category"]</option>
                                   
                                    @{
                                             if(@Categories!=null){
                                            foreach (var item in @Categories)

                                            {

                                                <option value="@item.CategoryId">@item.CategoryTlar</option>

                                            }
                                       }
                                    }

                            </select>

                            <span asp-validation-for="@Model.CategoryId" class="text-alert"></span>
                         </div>

                            <div class="col-lg-6">
                                <div>
                                    <label for="@Model.OrderIndex" class="form-label">@sharedResource["Order Index"]</label>
                                <input type="number" data-val="true" data-val-required="@sharedResource["Please enter order index"]" asp-for="@Model.OrderIndex" data-val-required="@sharedResource["Please fill the field"]" class="form-control" placeholder="@sharedResource["Enter Order Index"]" required min="1"/>
                                    <span asp-validation-for="@Model.OrderIndex" class="text-danger"></span>
                                </div>
                            </div>

                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.Weight" class="form-label">@sharedResource["Weight"]</label>
                                <input type="text" pattern="\d+(\.\d{1,2})?" title="Please enter a valid decimal value." asp-for="@Model.Weight" data-val-required="@sharedResource["Please enter the weight"]" class="form-control" placeholder="@sharedResource["Enter Weight"]" required step="any" min="0" />
                                <span asp-validation-for="@Model.Weight" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div>
                                <label for="@Model.Stock" class="form-label">@sharedResource["Stock"]</label>
                                <input type="number" asp-for="@Model.Stock" data-val-required="@sharedResource["Please enter the Stock"]" class="form-control" placeholder="@sharedResource["Enter Stock"]" required min="0" />
                                <span asp-validation-for="@Model.Stock" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-check">
                                <input asp-for="@Model.OutOfStock" class="form-check-input" type="checkbox">
                                <label for="@Model.OutOfStock" class="form-check-label">@sharedResource["Out Of Stock"]</label>
                                <span asp-validation-for="@Model.OutOfStock" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12 form-group">
                            <label for="formFile" class="form-label">@sharedResource["Adding Others Images For Item"]</label>
                            <input class="form-control" multiple name="MorePhoto" type="file">
                        </div>

                       @*  <div class="col-lg-6">
                            <div>
                                <label for="@Model.CategoryId" class="form-label">@sharedResource["catId"]</label>
                                <input type="text" asp-for="@Model.CategoryId" class="form-control" placeholder="@sharedResource["Category id"]" required />
                                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                            </div>
                        </div>*@
          
                        <div class="col-lg-12">
                            <div class="form-check">
                                <input asp-for="@Model.IsActive" class="form-check-input" type="checkbox" id="default">
                                <label for="@Model.IsActive" class="form-check-label" >@sharedResource["Active"]</label>
                                <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                 
                </div>
                <div class="modal-footer">
                    <div class="hstack gap-2 justify-content-end">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">@sharedResource["Close"]</button>
                        <button type="submit" asp-page="Index" asp-page-handler="AddItem" class="btn btn-success" id="add-btn">@sharedResource["Add"]</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>