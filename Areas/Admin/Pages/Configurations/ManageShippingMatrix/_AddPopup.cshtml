@using CRM.Data
@inject PerfumeContext _context
@{
    var coutries = _context.Country.Select(e => new { e.CountryId, e.CountryTlen, e.CountryTlar, e.IsActive }).Where(e => e.IsActive == true);
}

@model CRM.Models.ShippingMatrix

<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="AddModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="exampleModalLabel">@sharedResource["Add New Shipping Price"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
            </div>

            <form asp-area="Admin" asp-page="/ManageShippingMatrix/Index" asp-page-handler="AddShippingMatrix" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                <div class="modal-body">
                    <input type="hidden" id="id-field" />
                    <div class="col-lg-12">
                        <div>
                            <label for="@Model.CountryId" class="form-label">@sharedResource["Country"]</label>
                            <select data-val-required="@sharedResource["Select The Country"]" asp-for="@Model.CountryId" asp-items="ViewBag.countriesList" id="company_name-field" class="form-select" required>
                                <option value="" disabled selected>@(sharedResource["Choose Country"])</option>
                                @{
                                    foreach(var country in coutries)
                                    {
                                        <option value="@country.CountryId">@country.CountryTlar</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="@Model.CountryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.ActualPrice" class="form-label">@sharedResource["Actual Price"]</label>
                                <input data-val="true" data-val-required="@sharedResource["Please Enter Actual Price"]" type="number" asp-for="@Model.ActualPrice" class="form-control" placeholder="@sharedResource["Enter Actual Price"]" required />
                                <span asp-validation-for="@Model.ActualPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.AramexPrice" class="form-label">@sharedResource["Aramex Price"]</label>
                                <input data-val="true" data-val-required="@sharedResource["Please Enter Aramex Price"]" type="number" asp-for="@Model.AramexPrice" class="form-control" placeholder="@sharedResource["Enter Aramex Price"]" required />
                                <span asp-validation-for="@Model.AramexPrice" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.FromWeight" class="form-label">@sharedResource["From Weight"]</label>
                                <input data-val="true" pattern="\d+(\.\d{1,2})?" title="Please enter a valid decimal value." data-val-required="@sharedResource["Please Enter From Weight"]" type="text" asp-for="@Model.FromWeight" class="form-control" placeholder="@sharedResource["Enter From Weight"]" required />
                                <span asp-validation-for="@Model.FromWeight" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.ToWeight" class="form-label">@sharedResource["To Weight"]</label>
                                <input data-val="true" pattern="\d+(\.\d{1,2})?" title="Please enter a valid decimal value." data-val-required="@sharedResource["Please Enter To Weight"]" type="text" asp-for="@Model.ToWeight" class="form-control" placeholder="@sharedResource["Enter To Weight"]" required />
                                <span asp-validation-for="@Model.ToWeight" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <!--end row-->
                </div>
                <div class="modal-footer">
                    <div class="hstack gap-2 justify-content-end">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">@sharedResource["Close"]</button>
                        <button type="submit" asp-page="Index" asp-page-handler="AddShippingMatrix" class="btn btn-success" id="add-btn">@sharedResource["Add"]</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

