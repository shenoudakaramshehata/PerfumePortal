            var cols = rows[i].querySelectorAll('td, th');

            // Loop through the table columns (skip the last column, which is the "ACTIONS" column)
            for (var j = 0; j < cols.length - 1; j++) {
                // For Arabic characters, add a BOM to indicate UTF-8 encoding
                if (j > 0 && /[\u0600-\u06FF]/.test(cols[j].innerText)) {
                    row.push('\ufeff' + cols[j].innerText);
                } else {
                    // Handle "ADDRESS" column by enclosing in double quotes and removing extra spaces
                    if (j === 2) {
                        var addressParts = cols[j].innerText.split(',').map(part => part.trim());
                        row.push('"' + addressParts.join(', ') + '"');
                    }
                    // Handle "ORDER DATE" column by formatting the date
                    else if (j === 3) {
                        row.push(formatDateForExcel(cols[j].innerText));
                    } else {
                        row.push(cols[j].innerText);
                    }
                }
            }

            csv.push(row.join(','));
        }

        return csv.join('\n');
    }

    function formatDateForExcel(dateStr) {
        var date = new Date(dateStr);
        var day = String(date.getDate()).padStart(2, '0');
        var month = String(date.getMonth() + 1).padStart(2, '0');
        var year = String(date.getFullYear()).substr(-2);
        return day + '-' + getMonthName(parseInt(month)) + '-' + year;
    }

    function getMonthName(monthIndex) {
        var months = [
            'Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
            'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'
        ];
        return months[monthIndex - 1];
    }

    function exportTableToCsv() {
        // Select the table to be exported
        var table = document.getElementById('orderTable');
        if (table) {
            var csv = convertTableToCSV(table);

            // Modify the CSV to exclude the "ACTIONS" column
            csv = csv.replace(/ACTIONS,/g, ''); // Remove the ACTIONS column header
            csv = csv.replace(/,ACTIONS/g, ''); // Remove the ACTIONS column data

            // Merge the address values using "|" as a delimiter
            csv = csv.replace(/,(KW|Sharjah|Sharjah|AlRamaqia),/g, '|');

            // Provide a filename for the CSV file
            var filename = 'table_export.csv';

            // Download the CSV file
            downloadCSV(csv, filename);
        }
    }
