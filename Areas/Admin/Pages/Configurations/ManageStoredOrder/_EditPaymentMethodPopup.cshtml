@using CRM.Data
@using Microsoft.AspNetCore.Localization;
@inject PerfumeContext _context
@{
    var locale = Context.Features.Get<IRequestCultureFeature>();

    var BrowserCulture = locale.RequestCulture.UICulture.ToString();
    var paymentMethod = _context.paymentMehods.Select(e => new { e.PaymentMethodId, e.PaymentMethodEN,e.PaymentMethodAR });
}
@model CRM.Models.Order

<div class="modal fade" id="showEditPaymentMethodModal" tabindex="-1"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="exampleModalLabel">@(sharedResource["Edit"])</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close" id="close-modal"></button>
            </div>

            <form asp-area="Admin" asp-page="/Configurations/ManageStoredOrder/EditOrder" asp-page-handler="Editpaymentmethod" asp-route-Id="@Model.OrderId" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" id="id-field" />
                    <div class="row g-3">


                        <!--end col-->
                     


                        <div class="col-lg-12 hidden">
                            <div>
                                <input id="OrderPaymentId" asp-for="@Model.OrderId" hidden />
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <label asp-for="@Model.PaymentMethodId" for="car-rental-name">@sharedResource["Payment Method"] <small class="text-danger">*</small></label>

                            <select data-val="true" data-val-required="@sharedResource["Select Payment Method"]" id="PaymentMethodId" name="PaymentMethod" class="form-select required" aria-label="Default select example" required>
                                <option selected value="Select Type" disabled>@sharedResource["Choose Payment Method"]</option>

                                @{
                                    if (paymentMethod != null)
                                    {
                                        foreach (var item in paymentMethod)
                                        {
                                            
                                                if (@BrowserCulture == "en-US")
                                                {
                                                    <option value="@item.PaymentMethodId">@item.PaymentMethodEN</option>
                                                }
                                                else
                                                {
                                                <option value="@item.PaymentMethodId">@item.PaymentMethodAR</option>

                                                }
                                            
                                        }
                                    }
                                }

                            </select>
                            <span asp-validation-for="@Model.PaymentMethodId" class="text-alert"></span>
                        </div>

               
                       
                        <!--End Customer-->
                        <!--Order-->


                        
                        <!--end col-->
                        <!--end col-->
                        <!--end col-->
                    </div>
                    <!--end row-->
                </div>
                <div class="modal-footer">
                    <div class="hstack gap-2 justify-content-end">
                        <button type="button" class="btn btn-light"
                                data-bs-dismiss="modal">
                            @sharedResource["Close"]
                        </button>
                        <button type="submit" class="btn btn-success"
                                id="add-btn">
                            @sharedResource["Save"]
                        </button>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>