@page
@model CRM.Pages.PRIVACYModel
@{
    Layout = "~/Pages/UserSite/_Layout.cshtml";
}


@Html.Partial("~/Pages/UserSite/_TopBar.cshtml")


@Html.Partial("~/Pages/UserSite/_navbar.cshtml")


<div class="page-title-wrap">
    <div class="page-title-area" style="background-color:#f5f5f5 !important;">
        
        <div class="d-table">
            <div class="d-table-cell">
                <div class="title-content">
                    <h2 class="text-black" >@sharedResource["Privacy Policy"]</h2>
                    <ul>
                        <li>
                            <a class="text-black" asp-page="index">@sharedResource["Home"]</a>
                        </li>
                        <li>
                            <span class="text-black">@sharedResource["Privacy Policy"]</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

 <div class="row">
           
                        @{
                if (Model.BrowserCulture == "en-US")
                {
                    @Html.Raw(@Model.ContentEn);

                }else{
                    @Html.Raw(@Model.ContentAr);


                }
                }

 </div>
                  
            
        