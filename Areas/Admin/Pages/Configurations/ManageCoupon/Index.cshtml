@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    Layout = "_Layout";
    ViewBag.Title = @sharedResource["Coupon"];
    ViewBag.pTitle = @sharedResource["Coupon"];
    ViewBag.pageTitle = @sharedResource["Coupon"];
    ViewData["Title"] = @sharedResource["Coupon"];
}
<!--datatable css-->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" />
