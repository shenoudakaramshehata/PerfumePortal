    function editButtonClick(CustomerId) {
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/Admin/Configurations/Operator/Customers?handler=SingleCustomerForEdit",

            data: { "CustomerId": CustomerId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                document.getElementById("CustomerID").value = response.CustomerId
                document.getElementById("CustomerAddressID").value = response.CustomerAddressId
                document.getElementById("CustomerNameId").value = response.CustomerName
                document.getElementById("EmailId").value = response.Email
                document.getElementById("MobileId").value = response.Mobile

                document.getElementById("AddressId").value = response.Address
                document.getElementById("CityNameId").value = response.CityName
                document.getElementById("AreaNameId").value = response.AreaName
                document.getElementById("BuildingNoId").value = response.BuildingNo
                document.getElementById("CountryId").value = response.CountryId
                
                
                console.log(response);
                $('#showEditModal').modal('show');
            },

            failure: function (response) {
                alert(response);
            }
        });
    }
    // === VIEW ===//
    function ShowViewPopUp(CountryId) {

        $.ajax({
            type: "GET",
            url: "/CRM/Configurations/ManageCountry/Index?handler=SingleCountryForView",
            data: { "CountryId": CountryId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("TitleArDetails").innerHTML = response.TitleAr
                document.getElementById("TitleEnDetails").innerHTML = response.TitleEn
                document.getElementById("SortOrderDetails").innerHTML = response.SortOrder
                document.getElementById("UsedId").innerHTML = response.Used
                if (response.IsActive == true) {
                    document.getElementById("IsActiveDetails").innerHTML = "Active"

                }
                else {
                    document.getElementById("IsActiveDetails").innerHTML = "Not Active"

                }


                $('#QuickViewPoup').modal('show');
                console.log(response);
            },
            failure: function (response) {
                alert(response);
            }
        });

    }

    function deleteCountry(CustomerId) {
        $.ajax({
            type: "GET",
            url: "/CRM/Configurations/Operator/Index?handler=CountryForDelete",
            data: { "CustomerId": CustomerId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("DeleteCountryID").value = response.CountryId
                $('#deleteRecordModal').modal('show');


            },
            failure: function (response) {
                alert(response);
            }
        });
    }

